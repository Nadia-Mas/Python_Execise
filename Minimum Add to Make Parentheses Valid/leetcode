class Solution:
    def minAddToMakeValid(self, s: str) -> int:
        balance=0
        solution=0
        for i in range(0,len(s)):
            if(s[i]=="("):
                balance +=1
            else:
                balance -=1
            
            if(balance==-1):
                balance +=1
                solution +=1
        return balance+solution
